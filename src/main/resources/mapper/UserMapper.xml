<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.seckill.dao.UserDao">

    <resultMap id="BaseResultMap" type="org.seckill.entity.UserEntity">
        <id column="user_Id" property="userID" jdbcType="INTEGER"/>
        <result column="fk_student_Id" property="studentId" jdbcType="INTEGER"/>
        <result column="user_Num" property="userNumber" jdbcType="VARCHAR"/>
        <result column="user_Password" property="userPassword" jdbcType="VARCHAR"/>
        <result column="user_Email" property="userEmail" jdbcType="VARCHAR"/>
        <result column="user_Status" property="userStatus" jdbcType="INTEGER"/>
        <result column="user_Introduce" property="userIntro" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base">
        user_id,user_Num,fk_student_Id,user_Password,user_Email,user_Status,user_Introduce
    </sql>
    <select id="queryAllUser" resultMap="BaseResultMap">
        SELECT
        <include refid="Base"/>
        FROM user
        WHERE 1 = 1
    </select>

    <select id="queryByNum" resultMap="BaseResultMap">
        SELECT
        <include refid="Base"/>
        FROM user
        WHERE user_Num = #{number}
    </select>
    <!--parameterType为输入参数-->
    <insert id="insertUser" parameterType="org.seckill.entity.UserEntity">
       INSERT INTO user (user_Num,fk_student_Id,user_Password,user_Email,user_Introduce)
       VALUE (
         <if test="userNumber != null" >
        #{userNumber, jdbcType = VARCHAR},
         </if>
        #{studentId,jdbcType = INTEGER},
        <if test="userPassword != null">
        #{userPassword, jdbcType = VARCHAR},
        </if>
        #{userEmail,jdbcType = VARCHAR},
        #{userIntro,jdbcType = VARCHAR}
       )
    </insert>

